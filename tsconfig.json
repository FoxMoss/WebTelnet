{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "target": "ES2020",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "YOU_CANT_USE_FRAGMENTS",
    "types": [
      "@mercuryworkshop/alicejs"
    ],
  }
}
